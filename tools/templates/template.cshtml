  <body>
    <div class="container">
      <div class="masthead">
        <h3 class="muted">@Properties["project-name"]</h3>
      </div>
      <hr />
      <div class="row">
        <div class="span9" id="main">
          @RenderBody()
        </div>
        <div class="span3">
          <ul class="nav nav-list" id="menu">
            <li class="nav-header">@Properties["project-name"]</li>
            <li><a href="@Root/index.html">Home page</a></li>
            <li class="divider"></li>
            <li><a href="@Properties["project-nuget"]">Get Library via NuGet</a></li>
            <li><a href="@Properties["project-github"]">Source Code on GitHub</a></li>
            <li><a href="@Properties["project-github"]/blob/master/LICENSE">License (BSD 3-clause)</a></li>
            <li><a href="@Properties["project-github"]/blob/master/ChangeLog.md">Change Log</a></li>
            
            <li class="nav-header"><a href="@Root/documentation.html">Documentation</a></li>
            <li><a href="@Root/documentation.html#first-random-number">First random number</a></li>
            <li><a href="@Root/documentation.html#transforming-random-numbers">Transforming random numbers</a></li>
            <li><a href="@Root/documentation.html#random-number-sequence">Random Number Sequence</a></li>
            <li>
              <a href="@Root/documentation.html#user-defined-random-number-generators">Constructing User-Defined Random Number Generators</a>
              <ul class="nav nav-list">
                <li><a href="@Root/documentation.html#random-computation-expression">Random computation expression</a></li>
                <li><a href="@Root/documentation.html#generator-function">Generator function</a></li>
              </ul>
            </li>
            <li>
              <a href="@Root/documentation.html#numerical-examples">Numerical Examples</a>
              <ul class="nav nav-list">
                <li><a href="@Root/documentation.html#monte-carlo">Estimating pi, the ratio of a circle's circumference to its diameter</a></li>
                <li><a href="@Root/documentation.html#gibbs-sampler">Generating bivariate normal random numbers using Gibbs sampler</a></li>
              </ul>
            </li>
          </ul>
        </div>
      </div>
    </div>
    <a href="@Properties["project-github"]"><img style="position: absolute; top: 0; right: 0; border: 0;" src="https://s3.amazonaws.com/github/ribbons/forkme_right_gray_6d6d6d.png" alt="Fork me on GitHub"></a>
  </body>
</html>
